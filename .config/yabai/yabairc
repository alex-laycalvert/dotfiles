# starting yabai
yabai -m signal --add event=dock_did_restart action="sudo yabai --load-sa"
sudo yabai --load-sa

YABAI_WINDOW_SPACING=5

# window config
yabai -m config layout bsp
yabai -m config window_placement second_child
yabai -m config auto_balance off
yabai -m config split_ratio 0.5
yabai -m config window_border on
yabai -m config window_border_width 2
# yabai -m config active_window_border_color 0x00000000
yabai -m config active_window_border_color 0xff1793d1 
yabai -m config normal_window_border_color 0x00000000
yabai -m rule --add app="^System Preferences$" sticky=on layer=above manage=off
yabai -m config window_shadow off

# padding
yabai -m config top_padding    $YABAI_WINDOW_SPACING
yabai -m config bottom_padding $YABAI_WINDOW_SPACING
yabai -m config left_padding   $YABAI_WINDOW_SPACING
yabai -m config right_padding  $YABAI_WINDOW_SPACING
yabai -m config window_gap     $YABAI_WINDOW_SPACING

# bar
# yabai -m config external_bar main:25:0
