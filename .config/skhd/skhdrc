### general ###

# open kitty terminal
cmd - return : /Applications/kitty.app/Contents/MacOS/kitty --single-instance -d ~

### yabai keybindings ###

# focus window
cmd - h : yabai -m window --focus west
cmd - j : yabai -m window --focus south
cmd - k : yabai -m window --focus north
cmd - l : yabai -m window --focus east

# move managed window
cmd + shift - h : yabai -m window --warp west
cmd + shift - j : yabai -m window --warp south
cmd + shift - k : yabai -m window --warp north
cmd + shift - l : yabai -m window --warp east

# balance size of windows
cmd + ctrl - n : yabai -m space --balance

# make floating window fill screen
cmd + ctrl + shift - f     : yabai -m window --grid 1:1:0:0:1:1

# increase window size
cmd + ctrl - h : yabai -m window --resize left:-20:0
cmd + ctrl - l : yabai -m window --resize left:20:0

# toggle window zoom
cmd - z : yabai -m window --toggle zoom-fullscreen

# float / unfloat window and center on screen
cmd + shift - f : yabai -m window --toggle float --grid 4:4:1:1:2:2

cmd + ctrl - r : brew services restart yabai
